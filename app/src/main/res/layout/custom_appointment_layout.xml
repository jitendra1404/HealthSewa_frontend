<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="10dp"
    android:background="#0B82A8"
    android:padding="10dp">

    <TextView
        android:id="@+id/ttvdevicename"
        android:layout_width="130dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Device Name"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/ttvissue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ttvdevicemodel"
        android:layout_width="130dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="Devive Model"
        app:layout_constraintBottom_toTopOf="@+id/ttvappointmentdate"
        app:layout_constraintEnd_toStartOf="@+id/ttvlocation"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ttvdevicename" />

    <TextView
        android:id="@+id/ttvappointmentdate"
        android:layout_width="128dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="Date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ttvlocation"
        app:layout_constraintHorizontal_bias="0.676"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ttvdevicemodel" />

    <TextView
        android:id="@+id/ttvlocation"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:text="Location"
        app:layout_constraintStart_toStartOf="@+id/ttvissue"
        app:layout_constraintTop_toBottomOf="@+id/ttvissue" />

    <TextView
        android:id="@+id/ttvissue"
        android:layout_width="116dp"
        android:layout_height="32dp"
        android:text="Issues"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toEndOf="@+id/ttvdevicemodel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <ImageButton
        android:id="@+id/btndelete"
        android:layout_width="47dp"
        android:layout_height="46dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnupdate"
        app:layout_constraintVertical_bias="0.515"
        app:srcCompat="@drawable/delete" />

    <ImageButton
        android:id="@+id/btnupdate"
        android:layout_width="51dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/update" />


</androidx.constraintlayout.widget.ConstraintLayout>